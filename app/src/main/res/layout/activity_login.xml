<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F0F0"
    android:gravity="center_vertical">

    <!-- Logo ajustado -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo Servisur" />

    <!-- Email -->
    <EditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_style"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <!-- Contraseña -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:background="@drawable/edittext_style"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <!-- Switch admin -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar como administrador"
        android:layout_marginBottom="12dp"/>

    <!-- PIN admin -->
    <EditText
        android:id="@+id/pinField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PIN Administrador"
        android:inputType="numberPassword"
        android:background="@drawable/edittext_style"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginBottom="12dp"/>

    <!-- Botones -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR SESIÓN"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_purple"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_gray"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Divisor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  o  "
            android:textColor="@android:color/darker_gray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Texto y redes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puede también registrarse con:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivGoogle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFacebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivTwitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"/>
    </LinearLayout>

    <!-- Política de privacidad -->
    <TextView
        android:id="@+id/tvPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al continuar aceptas nuestra política de privacidad y términos."
        android:textSize="12sp"
        android:textColor="#2962FF"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

</LinearLayout>
