<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingVertical="20dp"
        android:gravity="center_vertical">

        <!-- Contenedor de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIncidenciaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo de la incidencia"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvIncidenciaFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/01/2025"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvIncidenciaEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abierta"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Icono Papelera -->
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/holo_red_dark"
            android:contentDescription="Eliminar incidencia"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
