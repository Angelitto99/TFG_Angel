<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvTituloSobreNosotros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre Nosotros"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Subtítulo en rojo -->
        <TextView
            android:id="@+id/tvSubtituloSobreNosotros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiénes somos y nuestro horario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF1100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <!-- Descripción general -->
        <TextView
            android:id="@+id/tvDescripcionEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Somos Servisur Telecomunicaciones, una empresa dedicada a ofrecer soluciones integrales en telecomunicaciones, cerrajería, mantenimiento y electricidad.\n\nContamos con más de 20 años de experiencia y un equipo altamente cualificado para atender a comunidades, empresas y particulares."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CardView con claim y horario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <!-- Claim -->
                <TextView
                    android:id="@+id/tvClaimSobreNosotros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expertos en Telecomunicaciones, Cerrajería, Mantenimiento y Electricidad"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp"/>

                <!-- Horario -->
                <TextView
                    android:id="@+id/tvHorarioSobreNosotros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario de atención:\nLunes a Viernes: 9:00 - 14:00 y 16:00 - 19:00\nSábados: 9:00 - 13:00\nDomingos y festivos: Cerrado"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scroll horizontal de imágenes -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgVehiculos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Flota de vehículos" />

                <ImageView
                    android:id="@+id/imgTienda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Tienda Servisur" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Botón para abrir Google Maps -->
        <Button
            android:id="@+id/btnUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver ubicación en Google Maps"
            android:textColor="@android:color/white"
            android:background="@color/purple_500"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- Botón para abrir la web -->
        <Button
            android:id="@+id/btnVerWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visitar nuestro sitio web"
            android:textColor="@android:color/white"
            android:background="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
