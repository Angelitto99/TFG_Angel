<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ Tema principal claro sin barra superior -->
    <style name="Theme.ServisurTelecomunicaciones" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Colores de barra de navegación y status -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/purple_700</item>

        <!-- Texto por defecto en negro -->
        <item name="android:textColor">@color/black</item>

        <!-- Estilo para botones globales -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Estilo de diálogos -->
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>

    <!-- ✅ Estilo de AlertDialog con texto negro y botón Cancelar azul -->
    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonPositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonNegative</item>
    </style>

    <!-- ✅ Botón positivo (por ejemplo, Aceptar) -->
    <style name="DialogButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- ✅ Botón negativo (por ejemplo, Cancelar) en azul -->
    <style name="DialogButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#2962FF</item>
    </style>

</resources>
